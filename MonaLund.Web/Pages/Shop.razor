@page "/shop"
@page "/shop/{SelectedCategory}"
@using Microsoft.EntityFrameworkCore
@using MonaLund.Web.Models
@using MonaLund.Web.Models.Contexts
@inject MonaContext _context


<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        @*Sidebar start*@
        <div class="col-lg-3 col-md-12">
            <div class="mb-5">
                        <h5 class="font-weight-semi-bold mb-4">Filter på kategori</h5>
                        <form>
                        <ul>
                            <li>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" checked="@IsCheckedCategory("all")" @onchange="@(() => CheckChangedCategory("all"))" id="all">
                                    <label class="custom-control-label" for="all">Alle</label>
                                    <span class="badge border font-weight-normal">@itemCount</span>
                                </div>
                            </li>
                        
                        @foreach(CategoryModel category in _categories)
                        {
                            <li>
                                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                    <input type="checkbox" class="custom-control-input" checked="@IsCheckedCategory(@category.Name)" @onchange="@( () => CheckChangedCategory(@category.Name))" id="@category.Name">
                                    <label class="custom-control-label" for="@category.Name">@category.Name</label>
                                    <span class="badge border font-weight-normal">@category.SubCategories.Sum(p => p.Products.Count)</span>
                                </div>
                            </li>
                            @if (category.SubCategories != null && category.SubCategories.Count != 0)
                            {
                                <ul hidden="@category.IsCategorySelected">
                                    @foreach(SubCategoryModel subCategory in category.SubCategories)
                                    {
                                        <li class="pl-4">
                                            <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                                <input type="checkbox" class="custom-control-input" checked="@IsCheckedSubCategory(@subCategory.Name)" @onchange="@( () => CheckChangedSubCategory(@subCategory.Name))" id="@subCategory.Name">
                                                <label class="custom-control-label" for="@subCategory.Name">@subCategory.Name</label>
                                                <span class="badge border font-weight-normal">@subCategory.Products.Count</span>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            }
                        }
                        </ul>
                        </form>
                    </div>
            </div>
            @*Sidebar end*@
            @*Shop start*@
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">
                <div class="col-12 pb-1">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <form action="">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Søg Efter Produkt">
                                    <div class="input-group-append">
                                        <span class="input-group-text bg-transparent text-primary">
                                            <i class="bi bi-search"></i>
                                        </span>
                                    </div>
                                </div>
                            </form>
                        <div class="dropdown ml-4">
                            <button class="btn border dropdown-toggle" type="button" id="triggerId" data-bs-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                        Sort by
                                    </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
                                <a class="dropdown-item" href="#">Latest</a>
                                <a class="dropdown-item" href="#">Popularity</a>
                                <a class="dropdown-item" href="#">Best Rating</a>
                            </div>
                        </div>
                    </div>
                </div>
                @if(_products.Count < 1) {
                    <h6>Ingen Produkter fundet, har du valgt en kategori?</h6>
                }
                    @foreach (ProductModel product in _products) 
                    {
                        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                            <ProductComponent Product=product />
                        </div>
                    }
                    
                
            </div>
        </div>
        @*Shop slut*@
    </div>
</div>
