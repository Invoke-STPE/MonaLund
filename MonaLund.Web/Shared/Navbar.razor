    @*Navbar start*@
    <div class="container-fluid ">
        <div class="row border-top px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-bs-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                    <h6 class="m-0">Kategorier</h6>
                    <i class="bi bi-chevron-down text-dark"></i>
                </a>
                <nav class="@_homePageCss" id="navbar-vertical" style="@_calculateSize">
                    <div class="navbar-nav w-100"> @*overflow-hidden*@
                        @foreach(CategoryModel category in Categories)
                        {
                            @if (category.SubCategories != null && category.SubCategories.Count != 0) {
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link" data-bs-toggle="dropdown">@category.Name <i class="bi bi-chevron-down float-right"></i></a>
                                    <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                                        @foreach (SubCategoryModel subCategory in category.SubCategories) {
                                            <a href="" class="dropdown-item">@subCategory.Name</a>
                                        }
                                    </div>
                                </div>
                        } else
                        {
                            <a href="/shop/@category.Name" class="nav-item nav-link">@category.Name</a>
                        }
                    }
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold">Mona Lund</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <NavLink href="" Match="NavLinkMatch.All" class="nav-link nav-item" @onclick=@(() => NavigateToURI("/"))>Home</NavLink>
                            <NavLink href="/shop" class="nav-link nav-item" @onclick=@(() => NavigateToURI("/shop"))>Shop</NavLink>
                            <NavLink href="/about" class="nav-link nav-item" @onclick=@(() => NavigateToURI("/about"))>Om Mig</NavLink>
                        </div>
                        <AuthorizeView>
                            <Authorized>
                                <div class="navbar-nav ml-auto py-0">
                                    <NavLink href="login" class="nav-item nav-link ">Opret</NavLink>
                                    <NavLink href="register" class="nav-item nav-link ">Logout</NavLink>
                                </div>
                            </Authorized>
                        </AuthorizeView>
                    </div>
                </nav>
                @if (_isHomePage)
                {
                    <div id="header-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active" style="height: 410px;">
                                <img class="img-fluid " src="Images/header-dark.jpg" alt="Image">
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                    <div class="p-3" style="max-width: 700px;">
